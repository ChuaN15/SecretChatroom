<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="4sp"
    android:layout_marginLeft="@dimen/spaceLR">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="55sp"
        android:layout_alignParentRight="true"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_chat_me"
            android:padding="@dimen/space10"
            android:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
            android:textAppearance="@style/Light"
            android:textColor="@android:color/white"
            android:textSize="@dimen/h3" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/space5"
            android:drawableLeft="@drawable/ic_clock"
            android:text="5:04pm"
            android:textAppearance="@style/ExtraLight"
            android:textColor="@color/colorTextInfo"
            android:textSize="@dimen/h4" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>